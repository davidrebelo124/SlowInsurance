@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password";
}
<div class="divider"></div>
<section>
    <div class="container text-center w-50">
        <form asp-controller="Account" asp-action="ForgotPassword" method="post" class="row g-3">
            <h1 class="h3 mb-3 fw-normal">Forgot your password</h1>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating my-1">
                <input type="email" class="form-control" asp-for="Email" placeholder="name@example.com">
                <label asp-for="Email">Email address</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <button class="w-100 btn btn-lg btn-primary" type="submit">Send Reset Link</button>
        </form>
    </div>
</section>