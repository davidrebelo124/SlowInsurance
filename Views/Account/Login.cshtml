@model LoginModel
@{
    ViewData["Title"] = "Login";
}
<div class="divider"></div>
<section>
    <div class="container text-center w-50">
        <form asp-controller="Account" asp-action="Login" method="post" class="row g-3" autocomplete="off">
            <h1 class="h3 mb-3 fw-normal">Login</h1>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-floating my-1">
                <input type="email" class="form-control" asp-for="Email" placeholder="name@example.com">
                <label asp-for="Email">Email address</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            
            <div class="input-group mb-3">
                <div class="form-floating">
                    <input type="password" class="form-control" id="password" asp-for="Password" placeholder="Password">
                    <label asp-for="Password">Password</label>
                </div>
                <span class="input-group-text bg-transparent">
                    <i class="far fa-eye fa-fw" style="cursor: pointer;" id="togglePassword"></i>
                </span>
            </div>
            <span asp-validation-for="Password" class="text-danger" style="margin-top: -15px"></span>

            <div class="checkbox my-3">
                <label>
                    <input asp-for="RememberMe" />
                    @Html.DisplayNameFor(m => m.RememberMe)
                </label>
            </div>

            <a asp-action="ForgotPassword" asp-controller="Account" class="justify-text-center">Forgot your password?</a>

            <button class="w-100 btn btn-lg btn-primary" type="submit">Login</button>
        </form>
        <a asp-action="SignUp" asp-controller="Account" class="justify-content-center">Don't have an account?</a>
    </div>
</section>