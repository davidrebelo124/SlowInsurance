@model List<ListUserModel>
@{
    ViewData["Title"] = "Users";
}

<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>
                    @if (user.IsAdmin)
                    {
                        <a class="btn btn-danger" asp-action="RemoveAdminRoleAsync" asp-route-id="@user.Id">Remove Admin Role</a>
                    }
                    else
                    {
                        <a class="btn btn-success" asp-action="GiveAdminRoleAsync" asp-route-id="@user.Id">Give Admin Role</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>